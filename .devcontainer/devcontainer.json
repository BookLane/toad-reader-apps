// For format details, see https://aka.ms/devcontainer.json. For config options, see the
// README at: https://github.com/devcontainers/templates/tree/main/src/javascript-node
{
	"build": {
		"context": "..",
		"dockerfile": "Dockerfile"
	},
	"customizations": {
		"vscode": {
			"settings": {
				"terminal.integrated.defaultProfile.linux": "bash",
				"terminal.integrated.profiles.linux": {
					"bash": {
						"path": "/bin/bash"
					}
				}
			},
			"extensions": [
				"expo.vscode-expo-tools"
			]
		}
	},
	"features": {
		"ghcr.io/devcontainers/features/aws-cli:1": {},
		"ghcr.io/devcontainers/features/git:1": {}
	},
	"mounts": [
		"source=${localEnv:HOME}${localEnv:USERPROFILE}/.aws,target=/home/developer/.aws,type=bind",
		"source=${localEnv:HOME}${localEnv:USERPROFILE}/.expo,target=/home/developer/.expo,type=bind"
	],
	"name": "toad-reader-apps",
	"postStartCommand": {
		"aws": "export AWS_PROFILE=BibleMesh",
		"git-ssh": "git config --global --unset gpg.ssh.program",
		"git-safe.directory": "git config --global --add safe.directory ${containerWorkspaceFolder}"
	},
	"runArgs": [
		"--name",
		"devcontainer-toad-reader-apps"
	]
}